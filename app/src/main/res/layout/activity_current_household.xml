<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentHousehold"
    android:id="@+id/relativeLayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/aero_blue"
        android:textSize="35sp"
        android:textStyle="bold"
        android:text="HOUSEHOLD"
        android:textAlignment="center"
        android:id="@+id/houseHoldTitleTV"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Back to Home"
        android:id="@+id/backBtn"
        android:onClick="onBackBtnClicked"
        android:layout_below="@id/houseHoldTitleTV"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/householdNameLL"
        android:layout_below="@id/backBtn"
        android:layout_marginTop="15dp"
        android:onClick="onChangeHouseholdName"
        android:background="@color/aero_blue">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".9"
            android:layout_height="wrap_content"
            android:text="Household Name"
            android:textSize="30sp"
            android:id="@+id/householdNameTV"
            android:layout_marginStart="15dp"/>
         <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/edit_profile"
            android:layout_width="0dp"
             android:layout_weight=".1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/aero_blue"
            android:src="@drawable/ic_baseline_chevron_right_24"
             android:layout_marginEnd="15dp"
             android:onClick="onChangeHouseholdName"/>
    </LinearLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/householdNameLL"
        android:id="@+id/housemateRecView"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/one_time_house_key"
        android:gravity="center"
        android:textSize="32sp"
        android:layout_above="@+id/houseKeyLayout"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/houseKeyTitleTV"
        android:layout_below="@id/housemateRecView"/>


    <LinearLayout
        android:id="@+id/houseKeyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_above="@id/getKeyButton"
        android:layout_marginBottom="64dp"
        android:background="@drawable/text_view_outline"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/houseKeyTextView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/key_char_background"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.MyTheme.Overline"
            android:textSize="64sp"
            android:drawableBottom="@color/black_800"/>

        <TextView
            android:id="@+id/houseKeyTextView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@drawable/key_char_background"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.MyTheme.Overline"
            android:textSize="64sp" />

        <TextView
            android:id="@+id/houseKeyTextView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/key_char_background"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.MyTheme.Overline"
            android:textSize="64sp" />

        <TextView
            android:id="@+id/houseKeyTextView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/key_char_background"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.MyTheme.Overline"
            android:textSize="64sp" />
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/getKeyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Key"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        android:onClick="getHouseKey"/>

</RelativeLayout>
