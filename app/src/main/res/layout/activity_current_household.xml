<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentHousehold"
    android:id="@+id/relativeLayout"
    android:padding="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topPanel">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Back"
            android:id="@+id/backBtn"
            android:onClick="onBackBtnClicked"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Household"
            android:textSize="30sp"
            android:textAlignment="center"
            android:id="@+id/houseHoldTitleTV"/>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Housemates: "
        android:textSize="30dp"
        android:layout_below="@id/topPanel"
        android:layout_marginTop="30dp"
        android:id="@+id/housematesTitleTV"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/housematesTitleTV"
        android:id="@+id/housemateRecView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/one_time_house_key"
        android:gravity="center"
        android:textSize="32sp"
        android:layout_above="@+id/houseKeyLayout"/>

    <LinearLayout
        android:id="@+id/houseKeyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_above="@id/getKeyButton"
        android:layout_marginBottom="64dp"
        android:background="@drawable/text_view_outline">

        <TextView
            android:id="@+id/houseKeyTextView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/key_char_background"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.MyTheme.Overline"
            android:textSize="64sp"
            android:drawableBottom="@color/black_800"/>

        <TextView
            android:id="@+id/houseKeyTextView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@drawable/key_char_background"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.MyTheme.Overline"
            android:textSize="64sp" />

        <TextView
            android:id="@+id/houseKeyTextView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/key_char_background"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.MyTheme.Overline"
            android:textSize="64sp" />

        <TextView
            android:id="@+id/houseKeyTextView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/key_char_background"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.MyTheme.Overline"
            android:textSize="64sp" />
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/getKeyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Key"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        android:onClick="getHouseKey"/>

</RelativeLayout>