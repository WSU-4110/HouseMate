<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".HomePageActivity">

    <TextView
        android:id="@+id/display_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskTitleTV"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text=""
        android:clickable="true"
        android:onClick="onSwitchHousehold"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/aero_blue"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_house_24"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/taskTitleTV"
        android:onClick="gotoCurrentHousehold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskTitleTV"
        android:layout_centerHorizontal="true"
        android:textColor="@color/aero_blue"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="TASKS"
        android:padding="5sp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/linearLayout"
        android:src="@drawable/ic_baseline_add_24"
        android:id="@+id/createTaskBtn"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/task_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@id/display_user"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:text="Log"
            android:id="@+id/logPageBtn"
            android:onClick="onLogBtnClicked"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:id="@+id/chatPageBtn"
            android:onClick="onChatBtnClicked"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/settingsPageBtn"/>

    </LinearLayout>



</RelativeLayout>

