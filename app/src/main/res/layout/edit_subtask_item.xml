<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/subtaskParent"
    style="@style/Theme.MyApp">

    <EditText
        android:id="@+id/subtask_text_view"
        android:hint="New Subtask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/subtask_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/subtask_delete_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="342dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/delete_task" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_new_subtask_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtask_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:text="@string/subtask_create" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/subtask_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtask_text_view"
        android:layout_alignParentStart="true"
        android:text="@string/subtask_cancel" />

</RelativeLayout>